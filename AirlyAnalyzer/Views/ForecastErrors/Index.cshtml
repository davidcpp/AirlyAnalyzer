@model IEnumerable<AirQualityForecastError>

@{
  ViewData["Title"] = "Forecast Errors";
}

<h1>@ViewData["Title"]</h1>

<div class="row mb-3 justify-content-center">
  <table class="display responsive nowrap" id="forecastErrors">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Period)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Class)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.TillDateTime)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Source)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.InstallationAddress)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.AirlyCaqiPct)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.AirlyCaqi)
        </th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Period)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Class)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.TillDateTime)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Source)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.InstallationAddress)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.AirlyCaqiPct)%
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.AirlyCaqi)
          </td>
        </tr>
      }
    </tbody>
    <tfoot>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Period)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Class)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.TillDateTime)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Source)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.InstallationAddress)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.AirlyCaqiPct)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.AirlyCaqi)
        </th>
      </tr>
    </tfoot>
  </table>
</div>

<div class="row mb-4 justify-content-center">

  <div class="form-group col-sm-6 col-md-5 col-lg-4 col-xl-3">
    <label for="forecastErrorDays">
      Choose day:
    </label>
    <select id="forecastErrorDays" class="form-control">
      <option value="0">Please choose an option...</option>
    </select>
  </div>

  <div class="col-sm-6 col-md-7 col-lg-8 col-xl-9">
  </div>
</div>

@section Scripts {
  <script type="text/javascript" src="~/js/forecastErrorsSite.js"></script>
}